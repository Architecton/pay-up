extends layout

block content
    #loginForm.row.bodyRow.bottomRow
        .center
          .v-align
            form#loginForm.loginForm
              p
                label.text(for='signupId_name') Name: 
                input#signupId_name.text(type='text' name='name' pattern="[A-ZČĆŽŠĐ][a-zčćžšđA-ZČĆŽŠĐ']{1,50}$" title='First name must start with a capital letter, followed by a maximum of 49 letters of any case. Apostrophes are allowed.' minlength='1' maxlength='50' required='')
              p
                label.text(for='signupId_surname') Surname: 
                input#signupId_surname(type='text' name='surname' pattern="(?=.{1,50}$)(([A-ZČĆŽŠĐ][a-zčćžšđA-ZČĆŽŠĐ']{1,50})+ *)+" title='Each last name must start with a capital letter, followed by a maximum of 49 letters of any case. Apostrophes are allowed.' minlength='1' maxlength='50' required='')
              p
                label.text(for='signupId_username') Username: 
                input#signupId_username.text(type='text' name='username' pattern='[a-zA-ZčćžšđČĆŽŠĐ0-9]{1,50}$' title='Username can only consist of letters and numbers and cannot be longer than 50 characters' minlength='1' maxlength='50' required='')
              p
                label(for='signupId_gender') Gender: 
                select#signupId_gender.select(name='gender' required='')
                  option Male
                  option Female
              p
                label.text(for='signupId_password') Password: 
                input#signupId_password(type='password' name='password' minlength='8' maxlength='50' required='')
              p
                label.text(for='signupId_confirmPassword') Confirm password: 
                input#signupId_confirmPassword(type='password' name='password' minlength='8' maxlength='50' required='')
              p
                label.text(for='signupId_email') Email: 
                input#signupId_email(type='email' name='email' required='')
              p
                input#signupId_notRobot(type='checkbox' required='')
                label(for='signupId_notRobot') I am not a robot.
              p
                input#signupId_termsAndConditions(type='checkbox' required='')
                label(for='signupId_termsAndConditions')
                  | I have read and agree to 
                  a(href='#')
                    | The Terms and
                    | Conditions
                  | .
              p
                input#signupConfirmButton.signupConfirmButton(type='submit' value='Login')
                input#signupResendButton.signupResendButton(type='button' value='Resend')
              p
                strong
                  | Please check your inbox for a confiration email. If you did not receive a confirmation
                  | email, please click the &quot;Resend&quot; button.